<li id="micropost-<%= micropost.id %>">
  <% if micropost.user.profilepicture? %>
    <%= image_tag micropost.user.profilepicture.url  %>
  <% else %>
    <%= link_to gravatar_for(micropost.user, size: 50), micropost.user %>
  <% end %> 
  <span class="user"><%= link_to (micropost.user.firstname + " " + micropost.user.lastname), micropost.user %></span>
  <span class="caption">
    <%= micropost.caption %>
    <%= image_tag micropost.postpicture.url if micropost.postpicture? %>
  </span>
  
  <span class="timestamp">
    Posted <%= time_ago_in_words(micropost.created_at) %> ago.
    <% if current_user?(micropost.user) %>
      <%= link_to "Delete", micropost, method: :delete,
                                       data: { confirm: "You sure?" } %>
    <% end %>
  </span>
</li>
